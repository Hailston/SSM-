<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hngy.mapper.NewsMapper">

	<!-- 添加新闻信息记录 -->
	<insert id="addNews" parameterType="news">
		insert into t_news(newsTitle,newsContent,newsDate,newsPhoto) values 
		(#{newsTitle},#{newsContent},#{newsDate},#{newsPhoto})
	</insert>

	<!-- 按照查询条件分页查询新闻信息记录 -->
	<select id="queryNews" resultMap="newsMap" >
		select t_news.* from t_news ${where} limit #{startIndex},#{pageSize}
	</select>
	<resultMap id="newsMap" type="news">
        <id property="newsId" column="newsId" />
    </resultMap>

    <!-- 按照查询条件查询所有新闻信息记录 -->
	<select id="queryNewsList" resultMap="newsMap" >
		select t_news.* from t_news ${where}
	</select>

    <!-- 按照查询条件的新闻信息记录数 -->
	<select id="queryNewsCount" resultType="int">
		select count(*) from t_news ${where}
	</select>

	<!-- 根据主键查询某个新闻信息记录 -->
	<select id="getNews" parameterType="int" resultMap="newsMap">
		select * from t_news where t_news.newsId = #{newsId}
	</select>

	<!-- 更新新闻信息记录 -->
	<update id="updateNews" parameterType="news">
		update t_news set newsTitle=#{newsTitle},newsContent=#{newsContent},newsDate=#{newsDate},newsPhoto=#{newsPhoto} where newsId = #{newsId}
	</update>

	<!-- 删除新闻信息记录 -->
	<delete id="deleteNews" parameterType="int">
		delete from t_news where newsId=#{newsId}
	</delete>

</mapper>
